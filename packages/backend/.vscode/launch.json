{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "debug backend in dev mode",
            "skipFiles": [ "<node_internals>/**" ],
            // log output in current terminal instead of debug console
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            // environment variables
            "env": {
                "ENV_DIR": "${workspaceFolder}/.env.files",
                "NODE_ENV": "development",
            },
            // run using tsx
            "runtimeExecutable": "${workspaceFolder}/../../node_modules/.bin/tsx",
            // not using nodemon in debug mode
            "program": "${workspaceFolder}/src/server.ts"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug jest unit tests in dev mode",
            "skipFiles": [ "<node_internals>/**" ],
            // log output in current terminal instead of debug console
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            // environment variables
            "env": {
                "ENV_DIR": "${workspaceFolder}/.env.files",
                "NODE_ENV": "development"
            },
            // run using tsx
            "runtimeExecutable": "${workspaceFolder}/../../node_modules/.bin/tsx",
            // start jest in debug mode
            "program": "${workspaceFolder}/../../node_modules/jest/bin/jest.js",
            "args": [
                "--config", "${workspaceFolder}/jest.config.js"
            ]
        }
    ]
}